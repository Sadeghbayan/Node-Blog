extends layout

block content
    .container
        h1  Login Page
        p   Please Fill The Below Form
        hr
        .row
            .col-lg-12
                form(role='form' method='post' action='/users/login')
                    .form-group
                        label(for='username') Username:
                        input#username.form-control(type='input' name='username')
                    .form-group
                        label(for='password') Password:
                        input#password.form-control(type='password' name='password')
                    button.btn.btn-default(type='submit') Login
